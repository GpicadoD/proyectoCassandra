<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JSON View</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.4.0/styles/default.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.4.0/highlight.min.js"></script>
    <script>hljs.highlightAll();</script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script >
        function edicion(index) {
            var textarea = document.getElementById('jsonContenido' + index);
            var botonEditar = document.getElementById('botonEditar' + index);
            var botonCancelar = document.getElementById('botonCancelar' + index);
            var actualizarForm = document.getElementById('actualizarForm' + index);
            textarea.readOnly = !textarea.readOnly;
            botonEditar.style.display = textarea.readOnly ? 'block' : 'none';
            botonCancelar.style.display = textarea.readOnly ? 'none' : 'block';
            actualizarForm.style.display = textarea.readOnly ? 'none' : 'block';
        }

        function subirContenido(index) {
            var textarea = document.getElementById('jsonContenido' + index);
            var contenidoInput = document.getElementById('contenido' + index);
            contenidoInput.value = textarea.value;
            if (confirm("¿Estás seguro de que quieres actualizar este JSON?")) {
                document.forms['actualizarForm' + index].submit();
            }
        }
    </script>
    <style>
        .json-container {
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-expand-lg bg-dark " data-bs-theme="dark" th:fragment="header">
        <div class="container-fluid blue">
            <a class="navbar-brand d-lg-flex me-lg-5">Cassandra</a>
            <div class="collapse navbar-collapse d-lg-flex mx-lg-5" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a href="/" class="nav-link active">Todos JSON</a>
                    </li>
                    <li class="nav-item">
                        <a href="/insertarjson" class="nav-link active">Insertar JSON</a>
                    </li>
                </ul>
                <form action="/buscarjson" method="post" class="d-flex me-3" role="search">
                    <input class="form-control me-2" name="nombre" id="nombre" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </div>
    <h1>JSON View</h1>
    <% json.rows.forEach(function(item, index) { %>
        <div class="json-container">
            <h2>Nombre del Archivo: <%= item.nombre %></h2>
            <textarea id="jsonContenido<%= index %>" rows="10" cols="250" readonly><%= item.contenido %></textarea>
            <button name="botonEditar" id="botonEditar<%= index %>" onclick="edicion(<%= index %>)">Editar</button>
            <button name="botonCancelar" id="botonCancelar<%= index %>" onclick="edicion(<%= index %>)" style="display: none;">Cancelar</button>
            <form name="actualizarForm<%= index %>" id="actualizarForm<%= index %>" action="/actualizarjson/<%= item.nombre %>" method="POST" style="display: none;"
                onsubmit="return confirm('¿Estás seguro de que quieres actualizar este JSON?');">
                <input type="hidden" name="contenido" id="contenido<%= index %>">
                <button type="button" onclick="subirContenido(<%= index %>)">Actualizar</button>
            </form>
            <form action="/eliminarjson/<%= item.nombre %>"  method="POST" onsubmit="return confirm('¿Estás seguro de que quieres eliminar este JSON?');">
                <button type="submit">Eliminar</button>
            </form>
        </div>
    <% }); %>

</body>
</html>