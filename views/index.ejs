<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JSON View</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.4.0/styles/default.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.4.0/highlight.min.js"></script>
    <script>hljs.highlightAll();</script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <script>
        function edicion(index) {
            var textarea = document.getElementById('jsonContenido' + index);
            var botonEditar = document.getElementById('botonEditar' + index);
            var botonCancelar = document.getElementById('botonCancelar' + index);
            var actualizarForm = document.getElementById('actualizarForm' + index);
            textarea.readOnly = !textarea.readOnly;
            botonEditar.style.display = textarea.readOnly ? 'block' : 'none';
            botonCancelar.style.display = textarea.readOnly ? 'none' : 'block';
            actualizarForm.style.display = textarea.readOnly ? 'none' : 'block';
        }

        function subirContenido(index) {
            var textarea = document.getElementById('jsonContenido' + index);
            var contenidoInput = document.getElementById('contenido' + index);
            contenidoInput.value = textarea.value;
            if (confirm("¿Estás seguro de que quieres actualizar este JSON?")) {
                document.forms['actualizarForm' + index].submit();
            }
        }
    </script>
</head>

<body class="pagina-main-fondo mainBody">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-2">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Mi colección</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/insertarjson">Insertar nuevos Json</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container fondoForm  p-3 my-5">
        <h1 class="p-3">Tus archivos JSON</h1>
        <% if (json && json.length > 0) { %>
            <% json.forEach(function(item, index) { %>
        
                <div class="json-container-class">
                    <h2>Nombre del Archivo: <%= item.nombre %>
                    </h2>
                    <textarea id="jsonContenido<%= index %>" rows="10" style="width: 100%;" readonly><%= JSON.stringify(item.contenidoFormateado, null, 4) %></textarea>
                    <div class="botones-container">
                        <button name="botonEditar" id="botonEditar<%= index %>" onclick="edicion(<%= index %>)" class="editar">Editar</button>
                        <button name="botonCancelar" id="botonCancelar<%= index %>" onclick="edicion(<%= index %>)" style="display: none;" class="cancelar">Cancelar</button>
                        <!-- <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-contenido='<%= JSON.stringify(item, null, 4) %>'>Open modal</button> -->
                        <form name="actualizarForm<%= index %>" id="actualizarForm<%= index %>"
                            action="/actualizarjson/<%= item.nombre %>" method="POST" style="display: none;"
                            onsubmit="return confirm('¿Estás seguro de que quieres actualizar este JSON?');">
                            <input type="hidden" name="contenido" id="contenido<%= index %>">
                            <button type="button" onclick="subirContenido(<%= index %>)">Actualizar
                            </button>
                        </form>
                        <form action="/eliminarjson/<%= item.nombre %>" method="POST"
                            onsubmit="return confirm('¿Estás seguro de que quieres eliminar este JSON?');">
                            <button type="submit">Eliminar</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="alert alert-info" role="alert">
                No se encontró ningún archivo JSON.
            </div>
        <% } %>
        
        
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-body">
                    <code></code>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var exampleModal = document.getElementById('exampleModal');
        exampleModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var contenidoJSON = button.getAttribute('data-contenido');
            var modalBodyCode = exampleModal.querySelector('.modal-body code');
            modalBodyCode.textContent = contenidoJSON;
        });
    });
</script>

</html>